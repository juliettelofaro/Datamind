{% extends 'layout.twig' %}

{% block body %}

    <div id = "content">
    <h1>Breathe, Chill, Enjoy</h1>
    <div id = "div-btn-home">
    <button id = "breatheButton"
            class = "btn-home">Breathe</button>
    <button id = "studyButton"
            class = "btn-home">Study</button>
    <button id = "gainButton"
            class = "btn-home">Gain</button>
    </div>
</div>

{% endblock %}
    {% block javascript %}
    {% raw %}
    <script>
var breatheButton = document.getElementById("breatheButton");
var studyButton = document.getElementById("studyButton");
var gainButton = document.getElementById("gainButton");
var content = document.getElementById("content");

function AjaxRequest(url) {
  var xhttp = new XMLHttpRequest();
  xhttp.onreadystatechange = function() {
      document.getElementById("content").innerHTML =
      this.responseText;
  };
  xhttp.open("GET", url, true);
  xhttp.send();
}

breatheButton.addEventListener("click", function(e) {
    AjaxRequest("http://localhost:3000/breathe");
});

studyButton.addEventListener("click", function(e) {
 AjaxRequest("http://localhost:3000/study");
});

gainButton.addEventListener("click", function(e) {
 AjaxRequest("http://localhost:3000/gain");
});

    </script>
    {% endraw %}
        {% endblock %}
